using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace _2_7_lenghOfName
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int lenghtOfFrame;
            string nameofUser;
            string upDownOfFrame;
            string middleOfFrame;
            char signOfFrame;

            Console.Write("Введите своё имя: ");          
            nameofUser = Console.ReadLine();
            Console.Write("\n");
            Console.Write("Введите символ для рамки: ");
            signOfFrame = Convert.ToChar(Console.ReadLine());
            Console.Write("\n\n");
            upDownOfFrame = Convert.ToString(signOfFrame);
            middleOfFrame = signOfFrame + nameofUser + signOfFrame;

            for (int i = 0; i < middleOfFrame.Length - 1; i++)
            {
                upDownOfFrame += signOfFrame;
            }

            Console.WriteLine(upDownOfFrame + "\n" + middleOfFrame + "\n" + upDownOfFrame);
        }
    }
}
