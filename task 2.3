using System;
using System.Collections.Generic;
using System.Linq;
using System.Security.Cryptography.X509Certificates;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int firstMemberOfRow = 5;
            int memberOfRow;
            string commandFromUser;
            bool isNeedContune = true;
            int scoreOfIteration = 0;
            int stepOfRow = 7;

            while (isNeedContune == true)
            {
                memberOfRow = stepOfRow * (scoreOfIteration++) + firstMemberOfRow;
                Console.WriteLine(memberOfRow);
                Console.WriteLine("Введите \"exit\" для завершения цикла и программы");
                commandFromUser = Console.ReadLine();

                if (commandFromUser == "exit")
                {
                    isNeedContune = false;
                }
                else
                {
                    continue;
                }
            }
        }
    }
}
