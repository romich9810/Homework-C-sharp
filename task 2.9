using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace _2_9_ThreeSinghNumber
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int highLimitOfSplinter = 28;
            int lowLimitOfSplinter = 0;
            int splinterNumber = random.Next(lowLimitOfSplinter, highLimitOfSplinter);
            int numberForSubstraction;
            int amountNumberOfSpliterating = 0;
            int maxTripleDigit = 999;
            int minTripleDigit = 100;
            bool isNeedSubstraction;


            for (int i = 0; i <= maxTripleDigit; i += splinterNumber )
            {
                isNeedSubstraction = true;

                if (i >= minTripleDigit)
                {
                    numberForSubstraction = i;

                    while (isNeedSubstraction == true)
                    {
                        numberForSubstraction -= splinterNumber;

                        if (numberForSubstraction == 0)
                        {
                            amountNumberOfSpliterating++;
                            isNeedSubstraction = false;
                            
                        }
                        if (numberForSubstraction < 0)
                        {
                            isNeedSubstraction = false;
                        }
                    }
                }
            }

            Console.WriteLine($"Количество чисел, кратных {splinterNumber} = {amountNumberOfSpliterating}.");
        }
    }
}
