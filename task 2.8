using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace _2_8_SecretMessage
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string secretMessage = "Ограничения лишь у тебя в голове!";
            string password = "no limited";
            string fieldOfWritePassword;
            int startAmountOfTry = 3;
            int showCountOfTry;

            for (int i = startAmountOfTry; i > 0; i--)
            {
                Console.WriteLine("Введите пароль : ");
                fieldOfWritePassword = Console.ReadLine();

                if (fieldOfWritePassword == password)
                {
                    Console.WriteLine(secretMessage);
                    break;
                }

                else
                {
                    showCountOfTry = i - 1;
                    Console.WriteLine($"Неправильный пароль. Осталось {showCountOfTry} попыток.");
                }

                if (showCountOfTry == 0)
                {
                    Console.WriteLine("У вас закончились попытки. Завершение программы.");
                }
            }
        }
    }
}
