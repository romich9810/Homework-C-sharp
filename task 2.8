using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace _2_8_SecretMessage
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string secretMessage = "Ограничения лишь у тебя в голове!";
            string password = "no limited";
            string fieldOfWritePassword;

            for (int i = 0; i < 3; i++)
            {
                Console.Write("Введите пароль: ");
                Console.Write("\n");
                fieldOfWritePassword = Console.ReadLine();

                if (fieldOfWritePassword == password)
                {
                    Console.WriteLine(secretMessage);
                    break;
                }
                 if (3 - (i + 1) == 0 )
                {
                    Console.WriteLine("У вас закончились попытки. Завершение программы.");
                    break;
                }
                else
                {
                    Console.WriteLine("Неправильный пароль. У вас осталось " + (3 - (i + 1)) + " попыток");
                }
            }
        }
    }
}
