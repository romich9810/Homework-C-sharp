using System;
using System.Collections.Generic;
using System.Linq;
using System.Security.Cryptography.X509Certificates;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int minimalNumber = 0;
            int maximalNumber = 100;
            int number = random.Next(minimalNumber, maximalNumber);
            int multipleThree = 3;
            int multipleFive = 5;
            int sumOfNumbers = 0;

            Console.WriteLine($"Великий рандом решил, что это число {number}");

            for (int i = 0; i <= number; i++)
            {
                Console.WriteLine(i);

                if ((i % multipleThree == 0) || (i % multipleFive == 0))
                {
                    sumOfNumbers += i;

                    if (i % multipleThree == 0)
                    {
                        Console.Write("\bДелится на 3\n");
                    }
                    if (i % multipleFive == 0)
                    {
                        Console.Write("\bДелится на 5\n");
                    }
                }
            }

            Console.WriteLine($"Сумма всех положительных чисел, кратных 3 и 5 = {sumOfNumbers}");
        }
    }
}
