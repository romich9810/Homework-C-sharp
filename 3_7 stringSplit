using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace _3_7_splitString
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string text;
            string[] textAfterSplitting;

            Console.Write("Введите текст: ");
            text = Console.ReadLine();
            textAfterSplitting = text.Split(' ');

            for (int i = 0; i < textAfterSplitting.Length; i++)
            {
                Console.WriteLine(textAfterSplitting[i]);
            }
        }
    }
}
